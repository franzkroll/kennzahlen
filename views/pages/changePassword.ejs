<!-- Displays simple page for changing password of current user -->

<head>
    <% include ../partials/head %>
</head>

<body class="container">

    <header>
        <% include ../partials/header %>
    </header>

    <main>
        <span style="display:block; height: 10px;"></span>
        <div class="misc-text">
            Geben Sie hier Ihr altes Passwort und das gew체nschte neue Passwort ein.
        </div>
        <span style="display:block; height: 10px;"></span>
        <!-- Displays status messages.-->
        <div class="misc-text">
            <%- text %>
        </div>
        <span style="display:block; height: 17px;"></span>
        <div class="login-formS">
            <form action="changePassword" method="POST" style="text-align: center">
                <!-- Field for setting name of the measure. -->
                <input type="password" name="oldPw" placeholder="Altes Passwort"
                    title="Geben Sie hier ihr altes Passwort ein." required>

                <span style="display:block; height: 10px;"></span>

                <!-- Field for entering new password. -->
                <input type="password" name="newPw" placeholder="Neues Passwort"
                    title="Geben Sie hier das gew체nschte neue Passwort ein." required>

                <!-- Field for entering new password again. -->
                <input type="password" name="newPw2" placeholder="Neues Passwort wiederholen"
                    title="Geben Sie hier das gew체nschte neue Passwort erneut ein." required>

                <span style="display:block; height: 20px;"></span>

                <!-- Submits data to server. -->
                <input type="submit" value="Passwort 채ndern">
            </form>
        </div>
    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>
</body>

</html>