<head>
    <% include ../../partials/head %>
</head>

<!-- Simple page for showing measures currently in the system. Löschen deletes the currently selected measures. -->

<body class="container">
    <header>
        <% include ../../partials/header %>
    </header>

    <main>
        <!-- Displays error/success text. -->
        <span style="display:block; height: 10px;"></span>
        <div class="misc-text"> <%- text -%></div>

        <!-- Dropdown menus and button for deleting users. -->
        <div style="text-align:center">
            <form action="deleteMeasure" method="post">
                <select name="measureSelect" id="measureSelect" style="width:40%; margin-right: 30px"
                    class="dropdown">ID</select>
                <select name="yearSelect" id="yearSelect" style="width:30%; margin-right: 30px"
                    class="dropdown">ID</select>
                <a href="/showMeasures"><button type="submit" style="width:20%" class="button">Löschen</button></a>
            </form>
        </div>
    </main>

    <footer>
        <% include ../../partials/footer %>
    </footer>
</body>

<script>
    const measures = '<%- measures %>';
</script>

<script src="/scripts/showMeasureHelper.js"></script>

</html>