                <input type="text" name="username" placeholder="Kennzahl 2" required>
                <input type="text" name="username" placeholder="Kennzahl 3" required>
                <input type="text" name="username" placeholder="Kennzahl 4" required>
                <input type="password" name="password" placeholder="Kennzahl 5" required>
                <input type="text" name="username" placeholder="Kennzahl 6" required>
